<script>

document.getElementById("formCliente").addEventListener("submit", function(event) {
    event.preventDefault();

    document.getElementById("clienteInfo").style.display = "block";
    document.getElementById("nomeExibido").innerText = document.getElementById("nomeCliente").value;
    document.getElementById("telExibido").innerText = document.getElementById("telefoneCliente").value;
});



let totalCentavos = 0; 
const tabela = document.getElementById("tabelaPedido");
const totalSpan = document.getElementById("total");

document.querySelectorAll(".formProduto").forEach(form => {
    form.addEventListener("submit", function(event) {
        event.preventDefault();

        const tipo = form.getAttribute("data-tipo");
        const select = form.querySelector("select");
        const qtd = parseInt(form.querySelector("input").value);

        if (!select.value) return;

        const [nome, preco] = select.value.split("|");

       
        const precoCentavos = Math.round(parseFloat(preco) * 100);

        const subtotalCentavos = precoCentavos * qtd;

        totalCentavos += subtotalCentavos;

        const subtotalFormatado = (subtotalCentavos / 100).toFixed(2);
        totalSpan.innerText = (totalCentavos / 100).toFixed(2);

        const row = tabela.insertRow();
        row.innerHTML = `
            <td>${tipo === "massa" ? "Sorvete de Massa" : "Picolé"}</td>
            <td>${nome}</td>
            <td>${qtd}</td>
            <td>R$ ${subtotalFormatado}</td>
        `;
    });
});
</script>

